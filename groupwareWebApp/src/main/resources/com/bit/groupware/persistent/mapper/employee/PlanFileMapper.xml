<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bit.groupware.persistent.mapper.employee.PlanFileMapper">
	
	<!-- 일정 파일 등록 -->
	<insert id="insertPlanFile" parameterType="PlanFile" statementType="PREPARED">
		<selectKey keyProperty="no" resultType="String" statementType="STATEMENT" order="BEFORE" >
			select 'f'||lpad(file_no_seq.nextval,5,0) from dual
		</selectKey>
			insert into plan_file(file_no, file_name, system_file_name, file_size, p_no )
			value ( #{fileNo}, #{planFile.fileName}, #{planFile.systemFileName}, #{planFile.fileSize}, #{planFile.pNo} )
	</insert>
	
	<!-- 일정 파일 삭제 -->
	<delete id="deletePlanFile" parameterType="PlanFile" statementType="PREPARED">
		delete from plan_file
		where p_no=#{pNo}
	</delete>
	
</mapper>


























