<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bit.groupware.persistent.mapper.EmployeeMapper">
	
	<insert id="insertDeputy" parameterType="DeputyVO" statementType="PREPARED">			
		<selectKey keyProperty="depNo" resultType="String" statementType="STATEMENT" order="BEFORE">
			select 'D'||lpad(deputy_no_seq.nextval,5,0) from dual;		
		</selectKey>				
		insert into Deputy (dep_no, start_date, end_date, 
									dep_reason,	demp_no, emp_no)
		values (#{depNo}, #{startDate}, #{endDate}, 
						#{depReason},#{dempNo},#{empNo})	
	</insert>
	
	<select id="selectDeputyList" parameterType="map">
		
	</select>

</mapper>

